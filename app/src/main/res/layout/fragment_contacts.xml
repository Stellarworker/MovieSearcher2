<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contactsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contactsHeaderMarginTop"
        android:layout_marginBottom="@dimen/contactsHeaderMarginBottom"
        android:gravity="center"
        android:text="@string/contactsHeaderText"
        android:textColor="@color/black"
        android:textSize="@dimen/contactsHeaderText" />

</androidx.appcompat.widget.LinearLayoutCompat>