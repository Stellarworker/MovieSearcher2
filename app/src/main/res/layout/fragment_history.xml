<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/hFIncludedLoadingLayout"
        layout="@layout/loading_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/historyHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mainHeaderMarginTop"
        android:gravity="center"
        android:text="@string/historyHeaderText"
        android:textColor="@color/black"
        android:textSize="@dimen/historyHeaderTextSize" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyFragmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hfRecyclerViewMarginTop"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.appcompat.widget.LinearLayoutCompat>
