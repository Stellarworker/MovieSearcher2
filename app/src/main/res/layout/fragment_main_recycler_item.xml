<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/itemContainerMarginStart"
    android:layout_marginTop="@dimen/itemContainerMarginTop"
    android:layout_marginEnd="@dimen/itemContainerMarginEnd"
    app:cardCornerRadius="@dimen/itemContainerCardCornerRadius"
    app:cardElevation="@dimen/itemContainerCardElevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/itemPadding">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mainFragmentRecyclerItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/itemMovieTitleTextSize" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mainFragmentRecyclerItemYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/itemMovieYearTextSize" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
